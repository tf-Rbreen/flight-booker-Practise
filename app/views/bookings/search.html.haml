= form_tag(search_path, :method => "get") do
  = search_field_tag :search, params[:search], placeholder: "booking"
  = button_tag "Search"
%h3 Search Results
- @results.each do |result|
  = "FLIGHT ID:         #{result.id}"
  %br/
  = "Name:              #{result.name}"
  %br/
  = "Email:             #{result.email}"
  %br/
  = "Passengers:        #{result.enter_how_many_passengers}"
  %br/
  = link_to "Booking", "/booking"
  %br/
  = "-----------------------------------------------------"
  %br/
